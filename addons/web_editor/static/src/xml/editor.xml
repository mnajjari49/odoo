<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <!--=================-->
    <!-- Base components -->
    <!--=================-->

    <!-- Editor top bar which contains the summernote tools and save/discard buttons -->
    <t t-name="web_editor.editorbar">
        <div id="web_editor-toolbars"/>
    </t>

    <!--=================-->
    <!-- Snippet options -->
    <!--=================-->

    <!-- Background position option overlay -->
    <t t-name="web_editor.background_position_overlay">
        <div class="o_we_background_position_overlay oe_overlay">
            <div class="o_we_overlay_content position-absolute">
                <div class="o_overlay_background"/>
                <div class="position-absolute d-flex m-1" style="top: 0">
                    <button class="btn btn-primary mr-1 o_btn_apply">Apply</button>
                    <button class="btn btn-danger o_btn_discard">Discard</button>
                </div>
            </div>
        </div>
    </t>

    <!-- Image quality and size options -->
    <t t-name="web_editor.image_quality_option">
        <div class="o_we_alter_image_options w-100 d-flex flex-column align-items-stretch">
            <div class="o_we_quality_option">
                <div class="d-flex justify-content-between pb-0 mb-0"><span>Quality</span><span class="o_we_image_file_size"></span></div>
                <input class="custom-range pt-0 mt-0" type="range" min="1" max="100" value="80"/>
            </div>
            <!-- This select is filled at runtime with available widths -->
            <we-select string="Width" class="o_we_inline" data-no-preview="true"/>
            <we-button class="o_we_apply_alter">Apply</we-button>
        </div>
    </t>
</templates>
