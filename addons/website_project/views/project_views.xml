<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="edit_project_extend" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="is_published" widget="website_redirect_button" groups="project.group_project_rating" attrs="{'invisible': [('rating_active', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_project_kanban_extend">
        <field name="name">project.project.kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='rating_percentage_satisfaction_exists']" position="replace">
                <div name="rating_percentage_satisfaction_exists">
                    <a name="open_website_url" type="object" context="{'search_default_rating_last_30_days':1}">
                        <i class="fa fa-smile-o" role="img" aria-label="Percentage of satisfaction" title="Percentage of satisfaction"/> <t t-esc="record.rating_percentage_satisfaction.value"/>%
                    </a>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
