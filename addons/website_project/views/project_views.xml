<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="edit_project_extend" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="portal_show_rating" invisible='True'/>
                <button class="oe_stat_button" type="object" name="action_view_all_rating" icon="fa-globe" groups="project.group_project_rating" string="Go to Website" >
                        
                </button>
            </xpath>
        </field>
    </record>
</odoo>