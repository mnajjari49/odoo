<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="Orderline" owl="1">
        <li t-on-click="selectLine" t-attf-class="orderline{{ line.selected ? ' selected' : '' }}">
            <span class="product-name">
                <t t-esc="line.get_product().display_name"/>
                <t t-if="line.get_product().tracking!=='none'">
                    <t t-if="line.has_valid_product_lot()">
                        <i  t-on-click="lotIconClicked"
                            class="oe_link_icon fa fa-list oe_icon line-lot-icon oe_green"
                            aria-label="Valid product lot"
                            role="img"
                            title="Valid product lot"
                        />
                    </t>
                    <t t-else="">
                        <i  t-on-click="lotIconClicked"
                            class="oe_link_icon fa fa-list oe_icon line-lot-icon oe_red"
                            aria-label="Invalid product lot"
                            role="img"
                            title="Invalid product lot"
                        />
                    </t>
                </t>
            </span>
            <span class="price">
                <t t-esc="pos.format_currency(line.get_display_price())"/>
            </span>
            <ul class="info-list">
                <t t-if="line.get_quantity_str() !== '1' || line.selected ">
                    <li class="info">
                        <em>
                            <t t-esc="line.get_quantity_str()" />
                        </em>
                        <t t-esc="line.get_unit().name" />
                        at
                        <t t-if="line.display_discount_policy() == 'without_discount' and
                            line.get_unit_display_price() != line.get_lst_price()">
                            <s>
                                <t t-esc="pos.format_currency(line.get_lst_price(),'Product Price')" />
                            </s>
                            <t t-esc="pos.format_currency(line.get_unit_display_price(),'Product Price')" />
                        </t>
                        <t t-else="">
                            <t t-esc="pos.format_currency(line.get_unit_display_price(),'Product Price')" />
                        </t>
                        /
                        <t t-esc="line.get_unit().name" />
                    </li>
                </t>
                <t t-if="line.get_discount_str() !== '0'">
                    <li class="info">
                        With a
                        <em>
                            <t t-esc="line.get_discount_str()" />%
                        </em>
                        discount
                    </li>
                </t>
            </ul>
        </li>
    </t>

    <t t-name="OrderSummary" owl="1">
        <div class="summary clearfix">
            <div class="line">
                <div class="entry total">
                    <span class="badge">Total: </span>
                    <span class="value">
                        <t t-esc="total" />
                    </span>
                    <div class="subentry">
                        Taxes:
                        <span class="value">
                            <t t-esc="tax" />
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="OrderWidget" owl="1">
        <div class="order-container">
            <div t-ref="scrollable" class="order-scroller touch-scrollable">
                <div class="order">
                    <t t-if="orderlinesArray.length === 0" >
                        <div class='order-empty'>
                            <i class='fa fa-shopping-cart' role="img" aria-label="Shopping cart" title="Shopping cart"/>
                            <h1>Your shopping cart is empty</h1>
                        </div>
                    </t>
                    <t t-else="">
                        <ul class="orderlines">
                            <t t-foreach="orderlinesArray" t-as="orderline">
                                <Orderline
                                    line="orderline"
                                    pos="pos"
                                    t-key="orderline.id"
                                    t-on-select-line="selectLine"
                                    t-on-show-product-lot="showProductLot"
                                />
                            </t>
                        </ul>
                        <OrderSummary order="order" pos="pos" />
                    </t>
                </div>
            </div>
        </div>
    </t>

</templates>