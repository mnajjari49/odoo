<?xml version="1.0"?>
<odoo>
    <record id="view_event_form_inherited" model="ir.ui.view">
        <field name="name">event.event.form.inherited</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(event.act_event_registration_from_event)d']" position="after">
                <button name="action_get_lead" class="oe_stat_button" type="object" icon="fa-handshake-o"
                    attrs="{'invisible': [('leads_count', '=' , 0)]}">
                    <div class="o_stat_info">
                        <field name="leads_count"/>
                        <span class="o_stat_text" attrs="{'invisible':[('leads_count','&gt;',1)]}"> Lead</span>
                        <span class="o_stat_text" attrs="{'invisible':[('leads_count','&lt;=',1)]}"> Leads</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
